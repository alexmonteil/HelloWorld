<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.GridPage"
             Padding="0,20,0,0">
    <ContentPage.Content>
        <Grid RowDefinitions="100,2*,*" ColumnDefinitions="auto,2*,*" BackgroundColor="Silver"
              RowSpacing="50">
            <Label Grid.Row="0"  Grid.Column="0" Text="Label 1" BackgroundColor="DarkSlateGray"/>
            <Label Grid.Row="0"  Grid.Column="1" Text="Label 2" BackgroundColor="DarkSlateGray"/>
            <Label Grid.Row="1"  Grid.Column="0" Text="Label 3" BackgroundColor="DarkSlateGray"/>
            <Label Grid.Row="1"  Grid.Column="1" Text="Label 4" BackgroundColor="DarkSlateGray"/>
            <Label Grid.Row="2" Grid.ColumnSpan="2" Text="Label 5" BackgroundColor="DarkSlateGray"/>
            <Label Grid.RowSpan="3" Grid.Column="2" Text="Label 6" BackgroundColor="DarkSlateGray"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>